
import gtk
from cacher import Cacher
import pylast

class TagDialog(gtk.Dialog):
	
	def __init__(self, parent, app, target):
		gtk.Dialog.__init__(self, None, parent, gtk.DIALOG_MODAL | gtk.DIALOG_DESTROY_WITH_PARENT | gtk.CAN_DEFAULT)
		
		self.app = app
		self.target = target
		
		self.setup()
		
		self.target.async_call(self.on_gettags_done, self.target.getTags)
		self.target.start()

	
	def setup(self):
		
		#declarations
		self.description_label = gtk.Label()
		self.tags_entry = gtk.Entry()
		
		#self
		self.set_title('Tag: ' + self.target.toStr())
		self.set_border_width(10)
		self.vbox.pack_start(self.description_label, False, False)
		self.vbox.pack_end(self.tags_entry, False, False, 10)
		self.resize(500, 10)
		self.add_button(gtk.STOCK_OK, gtk.RESPONSE_OK)
		self.add_button(gtk.STOCK_CANCEL, gtk.RESPONSE_CANCEL)
		self.set_default_response(gtk.RESPONSE_OK)
		self.set_response_sensitive(gtk.RESPONSE_OK, False)
		
		#description_label
		self.description_label.set_text("Enter tags seperated by commas:")
		self.description_label.set_alignment(0, 0.5)
		self.description_label.show()
		
		#tags_entry
		self.tags_entry.set_sensitive(False)
		self.tags_entry.set_text('Loading tags...')
		self.tags_entry.show()
	
	def on_gettags_done(self, sender, tags):
		
		if sender.last_error():
			self.tags_entry.set_text(sender.last_error().__str__())
			return
		
		names = []
		for tag in tags:
			names.append(tag.getName())
		
		self.tags_entry.set_text(', '.join(names))
		self.tags_entry.set_sensitive(True)
		
		self.set_response_sensitive(gtk.RESPONSE_OK, True)
		self.tags_entry.grab_focus()
	
	def get_tags(self):
		if self.run() == gtk.RESPONSE_OK:
			tags = self.tags_entry.get_text().split(',')
			if len(tags) > 0:
				tag_names = []
				for tag in tags:
					tag_names.append(tag.strip())
				out = tag_names
		else:
			out = None
		
		self.destroy()
		return out
